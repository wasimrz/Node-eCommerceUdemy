<%-include('../includes/head.ejs') %>
  
    <link rel="stylesheet" href="/css/forms.css" />
        <link rel="stylesheet" href="/css/auth.css" />
 
    <body>
        <%- include('../includes/navigation.ejs')%>
   
            <main>
            
            <div class="card m">
            <div class="container">
           
         <form class="login-form mt" action="/login" method="POST">

                    <div class="form-control">
                        <label for="title">E-mail</label>
                        <input class="<%= validationsErrors.find(e=>e.param ==="email") ? "invalid" :"" %>" type="text" name="email" id="email" value="<%=oldInput.email%>" />
                    </div>
                     <div class="form-control mt">
                        <label for="password">Password</label>
                        <input class="<%= validationsErrors.find(e=>e.param === "password") ? "invalid" :"" %>" type="password" name="password" id="password" value="<%=oldInput.password%>"/>
                           <input  type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
    <% if (errorMessage){%>
         <div class="user-message user-message--error"><%=errorMessage%></div>
         <%}%>
                    <button class="btn" type="submit">Login</button>
                </form>
                <div class='centered'>
                 <a href="/reset">Reset Password </a>
                </div>
               
            </div>
               
     
               
            </main>
          
            <%- include('../includes/end.ejs')%>
